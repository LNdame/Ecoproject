<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="28dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="inqb8.ansteph.ecobrick.view.collector.RecordCollection"
    tools:showIn="@layout/activity_record_collection">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="120dp"
        android:fontFamily="sans-serif-light"
        android:text="Enter quantity"
        android:textColor="#3e3e3e"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/txtuserFName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />





    <AutoCompleteTextView
        android:id="@+id/txtquantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="113dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        android:clickable="true"
        android:enabled="true"
        android:focusable="false"
        android:fontFamily="sans-serif-light"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#3e3e3e"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRefuseJoin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <Button

        android:id="@+id/btnRefuseJoin"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="191dp"

        android:layout_marginEnd="16dp"


        android:layout_marginStart="16dp"
        android:layout_marginTop="98dp"
        android:onClick="onBackClicked"
        android:text="Scan Depositor code"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtuserFName" />

</android.support.constraint.ConstraintLayout>
