<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="inqb8.ansteph.ecobrick.view.depositor.Account"
    tools:showIn="@layout/app_bar_account">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="60dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Your depositor QR code" />


            <ImageView
                android:id="@+id/QR_Image"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name" />

            <android.support.design.widget.TextInputLayout
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:visibility="gone"
                    android:id="@+id/txtEstAccountName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="First Name" />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtuserFName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Last Name" />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtuserLname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Username" />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Join on" />


            <TextView
                android:visibility="visible"
                android:id="@+id/txtJoinedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="18sp"
                android:text="2018/01/01"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="5dp"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Contact Number" />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtuserContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>














            <TextView
                android:visibility="gone"
                android:id="@+id/txtEstInspectionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="18sp"
                android:text="2018/01/01"/>






            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorAccent"/>



        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/btnUpdate"
        style="?android:textAppearanceSmall"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:paddingRight="10dp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:text="Back"
        android:onClick="onDoneClicked"
        android:textSize="16sp"
        android:textStyle="bold"/>

</RelativeLayout>
